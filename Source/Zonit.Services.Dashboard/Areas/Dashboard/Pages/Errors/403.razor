@page "/errors/403"
@layout ErrorLayout
@inject ICultureProvider Culture

@attribute [AllowAnonymous]

<HeadContent>
    <title>@Culture.Translate("Forbidden")</title>
</HeadContent>

<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h6">@Culture.Translate("Forbidden")</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudText Class="mb-2">@Culture.Translate("Access to this resource is forbidden.")</MudText>
        <MudLink Href="javascript:history.back()">@Culture.Translate("Back to previous page")</MudLink>
    </MudCardContent>
</MudCard>