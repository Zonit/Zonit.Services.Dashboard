@page "/errors/401"
@layout ErrorLayout
@inject ICultureProvider Culture

<HeadContent>
    <title>@Culture.Translate("Unauthorized")</title>
</HeadContent>

<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h6">@Culture.Translate("Unauthorized")</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudText Class="mb-2">@Culture.Translate("You are not authorized to access this resource.")</MudText>
        <MudLink Href="/">@Culture.Translate("Back to home page")</MudLink>
    </MudCardContent>
</MudCard>