@page "/errors/500"
@layout ErrorLayout
@inject ICultureProvider Culture

@attribute [AllowAnonymous]

<HeadContent>
    <title>@Culture.Translate("Internal Server Error")</title>
</HeadContent>

<MudCard>
    <MudCardHeader>
        <MudText Typo="Typo.h6">@Culture.Translate("Internal Server Error")</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudText Class="mb-2">@Culture.Translate("There was an internal server error.")</MudText>
        <MudLink Href="javascript:history.back()">@Culture.Translate("Back to previous page")</MudLink>
    </MudCardContent>
</MudCard>