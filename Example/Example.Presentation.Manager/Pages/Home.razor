@page "/"
@page "/home"

@rendermode InteractiveServer

@using Zonit.Extensions.Website
@using Zonit.Extensions.Cultures

@inject ICookieProvider Cookie
@inject ICultureProvider Culture

<PageTitle>Counter</PageTitle>

<div class="ma-4">
    <h1>Counter</h1>

    <a href="Counter">Click href</a>

    <p role="status">Current count: @currentCount</p>

    <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
    <MudPaper>
        <h2>Culture @Culture.GetCulture</h2>
    </MudPaper>

 @foreach(var cookie in Cookie.GetCookies())
{
    <MudPaper Class="my-2">
        <h2>@cookie.Name</h2>
        <p>@cookie.Value</p>
    </MudPaper>
}

<MudPaper>
        <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
            <MudTabPanel Text="Tab One">
                <MudText>Content One</MudText>
            </MudTabPanel>
            <MudTabPanel Text="Tab Two">
                <MudText>Content Two</MudText>
            </MudTabPanel>
            <MudTabPanel Text="Tab Three">
                <MudText>Content Three</MudText>
            </MudTabPanel>
            <MudTabPanel Text="Tab Disabled" Disabled="true">
                <MudText>Content Disabled</MudText>
            </MudTabPanel>
        </MudTabs>
</MudPaper>

<MudCard>
    <MudCardHeader >
        <MudText Typo="Typo.h6">Card Header</MudText>
    </MudCardHeader>
    <MudCardContent>
            <MudTextField data-clarity-mask="false" T=string Label="Standard" Variant="Variant.Text"></MudTextField>
    </MudCardContent>
    <MudCardActions>
        <MudButton>Click me</MudButton>
    </MudCardActions>
</MudCard>
</div>

    <MudPaper Width="250px" Elevation="0" Class="py-3 mb-4">
        <MudNavMenu Color="Color.Info" Rounded="true" Margin="Margin.Normal" Class="pa-2" Bordered="false">
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavLink Href="/__Main" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Storage">Servers</MudNavLink>
            <MudNavLink Href="/billing" Disabled="true">Billing</MudNavLink>
            <MudNavGroup Title="Settings" Expanded="true">
                <MudNavLink Href="/users">Users</MudNavLink>
                <MudNavLink Href="/security">Security</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/about">About</MudNavLink>
        </MudNavMenu>
    </MudPaper>
    <MudPaper Width="250px" Elevation="0" Class="py-3">
        <MudNavMenu Color="Color.Success" Bordered="true">
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavLink Href="/__Main" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Storage">Servers</MudNavLink>
            <MudNavLink Href="/billing" Disabled="true">Billing</MudNavLink>
            <MudNavGroup Title="Settings" Expanded="true">
                <MudNavLink Href="/users">Users</MudNavLink>
                <MudNavLink Href="/security">Security</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/about">About</MudNavLink>
        </MudNavMenu>
    </MudPaper>

@code {
    private int currentCount = 0;
    string TextValue { get; set; } = "Hello, World!";

    private void IncrementCount()
    {
        currentCount++;
    }
}